    function getListDoc(elem)
    {
        authorid = $(elem).closest('.author').find('.authorids').val();
        if ($('#tr-docs-' + authorid).is(':visible')){
            $('#tr-docs-' + authorid).hide();
        } else {
            $.ajax({
                url: "/user/ajaxidhaldocs",
                type: "post",
                data: {'authorid' : authorid},
